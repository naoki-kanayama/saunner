<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>

<div class="form-wrap">
  <div class="form">
    <%= video_tag("/videos/sauna.mov", autoplay: :true, loop: :true, muted: :true, class: 'video-content') %>
    <div class="app-title">Saunner</div>
    <div class="form-inner">
      <div class="form-group">
        <div class ="form-signup">
          <h2 class ="sign-up">Signin</h2>
        </div>
      </div>
      <div class="form-group">
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"e-mail", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"password" %>
      </div>
      <div class='session-btn'>
        <%= f.submit "Signin" ,class:"register-white-btn" %>
      </div>
      <div class='register-btn'>
        <%= link_to new_user_registration_path,method: :get do %>
          <%= f.submit "登録はこちら" ,class:"session-white-btn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>