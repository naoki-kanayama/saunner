<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>

<div class="form-wrap">
  <h1 class="form-header-title">
    Saunner
  </h1>
  <div class="form">
    <div class="form-inner">
      <div class="form-group">
        <div class ="form-signup">
          <h2 class ="sign-up">Signin</h2>
        </div>
      </div>
      <div class="form-group">
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"e-mail", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"password" %>
      </div>
      <div class='session-btn'>
        <%= f.submit "Signup" ,class:"register-white-btn" %>
      </div>
      <div class='register-btn'>
        <%= f.submit "既にユーザーの方はこちら" ,class:"session-white-btn" %>
      </div>
    </div>
  </div>
</div>
<% end %>