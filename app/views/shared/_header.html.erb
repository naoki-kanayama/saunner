<div class ="header">
  <div class="title">
    <div>   </div>
    <h1 class="header-title">
      <%= link_to 'Saunner', root_path, class: "header-title"%>
    </h1>
    <ul class="header-list">
      <% if current_user.image.url.present? %>
        <li><%= link_to (image_tag (current_user.image.url), :size => '60x60'), user_path(current_user.id), class:"user-image" %></li>
      <% else %>
        <li><%= link_to (image_tag ("noimage.png"), :size => '60x60'), user_path(current_user.id), class:"user-image" %></li>
      <% end %>
      <div class ="post-logout">
        <li><%= link_to (image_tag ("post.png"), :size => '50x50'), new_post_path, class: "new-post" %></li>
        <li><%= link_to (image_tag ("logout.png"),:size => '50x45'), destroy_user_session_path, method: :delete, class: "logout" %></li>
      </div>
    </ul>
  </div>
</div>