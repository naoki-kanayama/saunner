<%= render "shared/header" %>

<%= form_with model: @user, class: 'edit-main', local: true do |f| %>
<div class = "form-change-group">
  <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"nickname", maxlength:"40" %>
</div>
<div class="form-change-group">
  <%= f.label :"プロフィール画像" %><br/>
  <%= f.file_field :image %>
</div>
<div class ="form-change-group">
  <%= f.label :"自己紹介文" %><br/>
  <%= f.text_area :introduction, class:"input-introduction" %>
</div>

  <div class='form-change-group'>
    <%= f.submit "Edit" ,class:"register-change-white-btn" %>
  </div>

<% end %>
<%= render "shared/footer" %>