<%= render "shared/header" %>
<div class="chat-container">
  <div class="chat-row">
    <div class="col-xs-6">
      <h2><%= @user.nickname %>さん</h2>

      <!-- meassage tableは変えない -->
      <table class="message table">
        <thead>
          <tr>
            <th style="text-align: left; font-size: 20px;"><%= current_user.nickname %></th>
            <th style="text-align: right; font-size: 20px;"><%= @user.nickname %></th>
          </tr>
        </thead>
        <% @chats.each do |chat| %>
          <% if chat.user_id == current_user.id %>
          <tbody>
            <tr>
              <th>
                <p style="text-align: left;"><%= chat.message %></p>
              </th>
              <th></th>
            </tr>
          <% else %>
            <tr>
              <th></th>
              <th>
                <p style="text-align: right;"><%= chat.message %></p>
              </th>
            </tr>
          </tbody>
          <% end %>
        <% end %>
      </table>

      <%= form_with model: @chat, remote: true do |f| %>
      <div class="chat-form">
        <%= f.text_field :message, class:"message-form" %>
        <%= f.hidden_field :room_id %>
        <%= f.submit "SEND", class:"btn btn-sm btn-success chat-btn" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
<%= render "shared/footer" %>